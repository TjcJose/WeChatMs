/* pages/guides/guides.wxss */

.listitemWrap {
  padding: 15px;
}

.image_thumbView {
  width: 100%;
  height: 200px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.image_thumb {
  width: 100%;
  height: 100%;
  background-color: transparent;
}

.text_description {
  display: block;
  font-size: 15px;
  color: rgb(122, 122, 122);
  text-align: justify;
  line-height: 1.7em;
  padding-bottom: 5px;
}

.listitemInfoWrap {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.likeinfo {
  display: flex;
  width: 80px;
  justify-content: space-between;
  align-items: center;
}

.likebtn {
  width: 28px;
  height: 28px;
  background-color: transparent;
}

.likeinfo_count {
  font-size: 12px;
  color: rgb(148, 148, 148);
  padding: 3px 10px;
  background-color: rgb(240, 240, 240);
  border-radius: 4px;
}

.listitem_creattime {
  font-size: 12px;
  color: rgb(186, 186, 186);
  padding-right: 2px;
}
