.middle-title{
  text-align: center;
  margin-top: 30rpx;
}

.suggest-title text{
  font-size: 35rpx;
}

.suggest-data{
  margin-top: 15rpx;
  height: 230rpx;
}

.suggest-data-view{
  padding-top: 8rpx;
  margin-left: 15rpx;
  border-top: 3rpx solid #e8e8e8;
}

.suggest-data image{
  width: 40%;
  height: 230rpx;
  float: left;
  padding-right: 20rpx;
}

.suggest-data-title{
  height: 80rpx;
}

.suggest-data label{
  width: 60%;
  font-size: 45rpx;
}

.suggest-data-description{
  height: 150rpx;
  overflow:hidden;
}

.suggest-data text{
  font-size: 28rpx;
}


