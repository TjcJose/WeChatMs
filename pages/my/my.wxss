/* pages/my/my.wxss */

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 220rpx;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.form-wrap {
  border-top: 1px solid #eee;
  margin: 12px 0;
}

.flex-wrap {
  display: flex;
  flex-direction: row;
}

.input-wrap {
  background: #fff;
  border-bottom: 1px solid #eee;
  margin: 0 -12px;
  padding: 0 12px;
  height: 46px;
  line-height: 46px;
}

.label {
  color: #999;
  width: 4.5em;
}

.account-info-input {
  font-size: 18px;
  line-height: 100%;
  height: 100%;
  width: 100%;
}

.error {
  display: block;
  margin: 8px 0;
  color: #888;
  font-size: 14px;
}

.error {
  color: #e64240;
}

.searchLog {
  height: 350rpx;
  text-align: center;
  padding: 40rpx;
  border-bottom: 3rpx #eee solid;
  color: #aaa;
}

.searchLogDate {
  font-size: 28rpx;
}

.searchLogImg {
  width: 100%;
  height: 300rpx;
}

.pointText {
  color: #aaa;
  font-size: 26rpx;
  text-align: center;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
}
